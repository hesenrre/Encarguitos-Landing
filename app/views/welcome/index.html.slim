div
     
  .row
      .span4
         =image_tag "title.png" , :class => "title"
      .span4.mainButton       
        #myModal.modal.hide.fade.in
          = form_for @order, :remote => true, :url => {:action => "create"}, :html => \
            {:class => "form-horizontal"} do |f|
            .modal-header
              button.close data-dismiss="modal"
                i.icon-remove
              h3 Solicita a tu runner

            .modal-body
              #map_canvas
              br
              .row
                .span5
                    = f.hidden_field :lat
                    = f.hidden_field :lng
                    fieldset
                      .control-group
                        label.control-label Nombre:
                        .controls
                          = f.text_field :name, :placeholder => "ej. Juan Gonzalez"
                      .control-group
                        label.control-label Teléfono:
                        .controls
                          = f.text_field :phone, :placeholder => "ej. 04455 0123 \
                          4567"
                      .control-group
                        label.control-label Dirección:
                        .controls
                          = f.text_area :addrs, :rows => "3"
                      .control-group
                        label.control-label Comentarios:
                        .controls
                          = f.text_area :comments, :rows => "4", :placeholder => \
                          "Escribe algun comentario acerca de tu servicio"
            .modal-footer
              a.btn data-dismiss="modal" Close
              = f.submit "Solicitar", :class => "btn btn-warning"

        a#modalTrigger href="#myModal"
            =image_tag "bag.png", :class => :bag 
        
      .span4           
          .row
              .span4
                  =label_tag "solicita" , "Solicita a un \"runner\" para que llegue a tu domicilio y le puedas hacer un \"encarguito\"" , :class =>  "textos" 
          .row
              .span2.offset2
                  =label_tag "condesa" , "Condesa" , :class =>  "textos"
          .row
              .span2.offset2
                  =label_tag "delvalle" , "Del valle" , :class =>  "textos"
          .row  
               .span2.offset2
                  =label_tag "napoles" , "Napoles" , :class =>  "textos"
          .row
               .span2.offset2
                  =label_tag "narvarte" , "Narvarte" , :class =>  "textos"
          .row
               .span4.questionDiv
                  =link_to " ¿ Quieres ser un \"RUNNER\" ? ",  "https://docs.google.com/spreadsheet/viewform?formkey=dDRrNGtoeU5rdjNRZ3JwSnV0bmxNVnc6MQ" , :class=>"textosLink"
  .row
      .span4.bubbles
          =image_tag "bubbles.png"

